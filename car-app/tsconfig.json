    "baseUrl": ".",
    "paths": {
      "@app/*": ["app/*"],
      "@assets/*": ["app/assets/*"],
      "@components/*": ["app/components/*"],
      "@screens/*": ["app/screens/*"],
      "@navigators/*": ["app/navigators/*"],
      "@theme/*": ["app/theme/*"],
